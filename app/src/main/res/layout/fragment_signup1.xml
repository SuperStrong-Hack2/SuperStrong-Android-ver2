<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Signup1Fragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <!-- 이용약관 -->

        <!-- 메타머스크 이용약관 동의 -->

        <!-- 개인정보 수집 및 이용 동의 -->



        <View
            android:id="@+id/toolbar_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"

            android:background="#AEAEAE" />

        <TextView
            android:id="@+id/notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이용약관"

            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            android:layout_alignParentStart="true"
            />

        <CheckBox
            android:id="@+id/terms_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/notice"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"
            android:layout_marginStart="40dp"
            android:text="이용약관, 개인정보 수집 및 이용에 모두 동의" />

        <CheckBox
            android:id="@+id/metamask_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/terms_checkbox"
            android:layout_alignParentStart="true"
            android:layout_marginTop="14dp"
            android:layout_marginStart="40dp"
            android:text="메타머스크 이용약관 동의 (필수)" />

        <!-- 이용약관 텍스트 레이블 -->
        <CheckBox
            android:id="@+id/privacy_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/metamask_checkbox"
            android:layout_alignParentStart="true"
            android:layout_marginTop="14dp"
            android:layout_marginStart="40dp"
            android:text="개인정보 수집 및 이용 동의 (필수)" />

        <TextView
            android:id="@+id/unchecked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/privacy_checkbox"
            android:layout_alignParentStart="true"
            android:layout_marginTop="14dp"
            android:layout_marginStart="40dp"
            android:textColor="@color/red"
            android:visibility="invisible"
            android:text="필수 항목에 동의가 필요합니다." />




        <!-- 확인 버튼 -->

        <!-- 취소 버튼 -->
        <android.widget.Button
            android:background="@drawable/round_button"
            android:id="@+id/confirm_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:text="확인"
            android:textColor="#FFFFFF" />

        <android.widget.Button
            android:background="@drawable/round_button_gray"
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true" />

    </RelativeLayout>

</FrameLayout>