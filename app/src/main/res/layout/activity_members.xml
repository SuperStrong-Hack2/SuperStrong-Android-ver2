<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 이용약관 -->

    <!-- 메타머스크 이용약관 동의 -->

    <!-- 개인정보 수집 및 이용 동의 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이용약관"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="40dp"
        android:layout_alignParentStart="true"
        />

    <CheckBox
        android:id="@+id/terms_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp"
        android:layout_marginStart="40dp"
        android:text="이용약관, 개인정보 수집 및 이용에 모두 동의" />

    <CheckBox
        android:id="@+id/metamask_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/terms_checkbox"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:layout_marginStart="40dp"
        android:text="메타머스크 이용약관 동의 (필수)" />

    <!-- 이용약관 텍스트 레이블 -->
    <CheckBox
        android:id="@+id/privacy_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/metamask_checkbox"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp"
        android:layout_marginStart="40dp"
        android:text="개인정보 수집 및 이용 동의 (필수)" />



    <!-- 확인 버튼 -->

    <!-- 취소 버튼 -->
    <Button
        android:id="@+id/confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:background="#E68650"
        android:text="확인"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="취소"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@id/confirm_button" />

</RelativeLayout>