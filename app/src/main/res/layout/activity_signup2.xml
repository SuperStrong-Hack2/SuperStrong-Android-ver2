<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 이용약관 -->

    <!-- 메타머스크 이용약관 동의 -->

    <!-- 개인정보 수집 및 이용 동의 -->

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_left_arrow"/>

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="회원가입"
            android:textColor="@color/black"
            android:textSize="24dp" />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/idtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_alignParentStart="true"
        />

    <EditText
        android:id="@+id/ideditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@={viewModel.user.username}"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_below="@+id/idtext"/>
    <TextView
        android:id="@+id/passtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:layout_below="@+id/ideditText"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_alignParentStart="true"
        />

    <EditText
        android:id="@+id/passeditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@={viewModel.user.username}"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_below="@+id/passtext"/>

    <TextView
        android:id="@+id/passtext2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 재확인"
        android:layout_below="@+id/passeditText"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_alignParentStart="true"
        />

    <EditText
        android:id="@+id/passeditText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@={viewModel.user.username}"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_below="@+id/passtext2"/>
    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일"
        android:layout_below="@+id/passeditText2"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_alignParentStart="true"
        />

    <EditText
        android:id="@+id/emailedit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@={viewModel.user.username}"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_below="@+id/email"/>
    <TextView
        android:id="@+id/reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주민등록번호"
        android:layout_below="@+id/emailedit"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_alignParentStart="true"
        />

    <EditText
        android:id="@+id/regedit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@={viewModel.user.username}"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_below="@+id/reg"/>

    <TextView
        android:id="@+id/num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전화번호"
        android:layout_below="@+id/regedit"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"

        android:layout_alignParentStart="true"
        />

    <EditText
        android:id="@+id/numedit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@={viewModel.user.username}"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_below="@+id/num"/>







    <!-- 확인 버튼 -->

    <android.widget.Button
        android:background="@drawable/round_button"
        android:id="@+id/confirm_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:text="확인"
        android:textColor="#FFFFFF"

        android:layout_centerHorizontal= "true"
        />


</RelativeLayout>